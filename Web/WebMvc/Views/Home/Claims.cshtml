@using Microsoft.AspNetCore.Authentication

@{
    ViewData["Title"] = "Claims Information";
}

<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-info rounded shadow-sm">
    <img class="mr-3" src="~/img/bootstrap-outline.svg" alt="" width="48" height="48">
    <div class="lh-100">
        <h6 class="mb-0 text-white lh-100">Claims</h6>
        <small>Since 2020</small>
    </div>
</div>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dd>@claim.Value</dd>
    }
</dl>

<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-info rounded shadow-sm">
    <img class="mr-3" src="~/img/bootstrap-outline.svg" alt="" width="48" height="48">
    <div class="lh-100">
        <h6 class="mb-0 text-white lh-100">Properties</h6>
        <small>Since 2020</small>
    </div>
</div>

<dl>
    @foreach (var prop in (await Context.AuthenticateAsync()).Properties.Items)
    {
        <dt>@prop.Key</dt>
        <dd>@prop.Value</dd>
    }
</dl>